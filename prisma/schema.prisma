generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

model Question {
  id              String         @id @default(uuid())
  title           String
  description     String
  boilerplateCode String         @default("")
  solutionCode    String         @default("")
  difficulty      String         @default("medium")
  category        String         @default("")
  language        String         @default("python")
  type            String         @default("python_script")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  interviews      Interview[]
  files           QuestionFile[]
}

model QuestionFile {
  id         String   @id @default(uuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  name       String
  url        String
  size       Int
  mimeType   String
  createdAt  DateTime @default(now())
}

model Interview {
  id         String           @id @default(uuid())
  title      String
  status     String           @default("active")
  questionId String?
  question   Question?        @relation(fields: [questionId], references: [id])
  code       String           @default("")
  language   String           @default("python")
  endedAt    DateTime?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
  events     InterviewEvent[]
  notes      InterviewNote[]
}

model InterviewEvent {
  id          String   @id @default(uuid())
  interviewId String
  interview   Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  timestamp   Int
  userName    String
  type        String   @default("edit")
  content     String
  createdAt   DateTime @default(now())
}

model InterviewNote {
  id          String   @id @default(uuid())
  interviewId String
  interview   Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  authorId    String
  content     String   @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
